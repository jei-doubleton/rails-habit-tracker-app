<h2>Login</h2>

<%= form_for @user, url: '/login' do |f| %>
    <div>
        <%= f.label :name, "Username:" %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :password, "Password:" %>
        <%= f.password_field :password %>
    </div>
    <div>
        <%= f.submit "Login" %>
    </div>
<% end %>