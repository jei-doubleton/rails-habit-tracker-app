<div class="main-content">
    <h3>Welcome <%= @user.name %>!</h3>
    
    <% if flash[:notice] %>
        <div class="error_message">
            <%= flash[:notice] %>
        </div>
    <% end %>
    
    <% if @user.my_habits %>
        <p>These are your habits:</p>
        <ol>
            <% @user.my_habits.each do |habit| %>
                <li><%= habit.name %></li>
            <% end %>
        </ol>
        <p><%= link_to "Create some new habits!", new_user_my_habit_path(@user) %></p>
    <% else %>
        <p>You haven't set up any habits. <%= link_to "Create some now!", new_user_my_habit_path(@user) %></p>
    <% end %>
</div>